generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CatalogGroupHeader {
  id          String             @id @default(cuid())
  name        String
  description String?
  items       CatalogGroupItem[]
  createdAt   DateTime           @default(now()) @map("created_at")
  updatedAt   DateTime           @updatedAt @map("updated_at")

  @@map("catalog_group_headers")
}

model CatalogGroupItem {
  id          String             @id @default(cuid())
  level       Int                @default(1)
  parentId    String?            @map("parent_id")
  parent      CatalogGroupItem?  @relation("CatalogGroupItemToSelf", fields: [parentId], references: [id])
  children    CatalogGroupItem[] @relation("CatalogGroupItemToSelf")
  code        String
  name        String
  description String?
  group       CatalogGroupHeader @relation(fields: [groupId], references: [id])
  groupId     String             @map("group_id")
  createdAt   DateTime           @default(now()) @map("created_at")
  updatedAt   DateTime           @updatedAt @map("updated_at")

  @@map("catalog_group_items")
}
